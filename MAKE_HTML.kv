#:import Factory kivy.factory.Factory

<abtbuilder@Popup>
	title: "About this builder..."
	size_hint_x:0.6
	size_hint_y:0.6
	BoxLayout	
		orientation:"vertical"
		Label:
			text: "Builder. It can assist you in learning HTML syles and help in making basic blocks"
			halign:"center"
			valign:"center"
			text_size:self.size
		
		
		
# It is for asking user if he needs to quit the app or not
<suretogoout@Popup>
	size_hint_x:0.9
	size_hint_y:0.9
	title:"Quit?"
	BoxLayout:
		orientation:"vertical"
		Label:
			text: "Sure to Quit?"
			text_size: self.size
			halign:"center"
			valign:"center"
			size_hint_y: 1
			size_hint_x:1
			height: self.texture_size[1]
		Button:
			text: "YES"
			background_color:1,0,0,1
			text_size: self.size
			on_release:
				app.appendtofile("/n </html>")
				quit()
			halign:"center"
			valign:"center"
			size_hint_y: 1
			size_hint_x:1
			height: self.texture_size[1]
		Button:
			text: "No"
			background_color:0,1,0,1
			text_size: self.size
			on_release: root.dismiss()
			halign:"center"
			valign:"center"
			size_hint_y: 1
			size_hint_x:1
			height: self.texture_size[1]
			
			
			
			
							
							
<checkdir@Popup>
	title:"Current DIR"
	size_hint_x:.4
	size_hint_y:0.4
	ScrollView:
		do_scroll_y:True
		effect_cls:"ScrollEffect"
		GridLayout:
			cols:2
			Label:
				text:"directory is {}".format(app.os.path.relpath(app.pathtofile[2:-2:1]))
				height: root.height/3
				text_size:self.size
				halign:"center"
				valign:"center"
			ScrollView:
				do_scroll_y:True
				effect_cls:"ScrollEffect"
				Image:
					keep_ratio: True
					size_hint_y: None
					size_hint_x: 1
					height:self.parent.width/self.image_ratio
					width: self.parent.width
					source: str(app.pathtofile[2:-2])
<getfiledir@Popup>
	title:"Select the File"
	auto_dismiss:False
	size_hint_x:.7
	size_hint_y:.7
	BoxLayout:
		orientation:"vertical"
		FileChooserIconView:
			id: findthefiledir
			dirselect:False
			path: app.wd
			rootpath:app.wd
		Label:
			text:"You have selected {}".format(findthefiledir.selection)
			text_size:self.size
			size_hint_y:0.2
		Button:
			size_hint_y:.1
			text_size:self.size
			text:"I have selected it"
			on_press:app.pathtofile=str(findthefiledir.selection)
			on_release: root.dismiss()
<videohero@Popup>
