						value_track_color:[0, 1, 0, 1]
						min: 0
						max: 255
						step:1
						sensitivity: 'all'
						size_hint_x:.9
					Label:
						text:str(greenslider.value)
				Label:
					text:"Green"
					height:self.texture_size[1]
				Label:
					text:"Blue"
					height:self.texture_size[1]
				BoxLayout:
					orientation:"vertical"
					size_hint_x:1
					size_hint_y:None
					Slider:
						id: blueslider
						value_track:True
						value_track_color:[0, 0, 1, 1]
						min: 0
						max: 255
						step:1
						sensitivity: 'all'
						size_hint_x:.9
					Label:
						text:str(blueslider.value)
				Button:
					text:"o"
					background_normal:""
					height: self.texture_size[1]
					background_color: [redslider.value/255,greenslider.value/255,blueslider.value/255,1]
				Button:
					text:"p"
					background_normal:""
					height: self.texture_size[1]
					background_color: [redslider.value/255,greenslider.value/255,blueslider.value/255,1]
		Button:
			text:"I am done"
