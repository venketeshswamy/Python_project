#:import Factory kivy.factory.Factory
<ScreenOne>: 
    BoxLayout: 
        Button: 
            text: "Lead me to change to cwd" 
            background_color : 0, 0, 1, 1 
            on_press: 
                Factory.pp().open()
		Button:
			text:"Lead me to builder now"
			on_release:root.manager.current = 's2'
<ScreenTwo>: 
    BoxLayout: 
        Button: 
            text: "Sure to Go to Builder?" 
            on_press: 
                app.changetoapp()
				quit()
<pp@Popup>
	size_hint_y:.9
	size_hint_x:.9
	BoxLayout:
		orientation:"vertical"
		FileChooserIconView:
			id: getchangedtocwd
			dirselect:False
		Label:
			text:"You Can only copy one file @ A time"
			text_size:self.size
		Label:
			text:"U are about to copy the file in {}".format(getchangedtocwd.selection)
			text_size:self.size
			size_hint_y:.3
		Button
			text:"OK"
			text_size:self.size
			on_release: app.copytolocal(getchangedtocwd.selection[0])
			size_hint_y:.1